{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/IEC-61400-15/eya_def/blob/main/iec_61400-15-2_eya_def.schema.json",
  "$version": "0.0.1",
  "title": "IEC 61400-15-2 EYA DEF Data Model",
  "description": "IEC 61400-15-2 EYA DEF energy assessment report data model.",
  "type": "object",
  "properties": {
    "title": {
      "title": "Title",
      "description": "Title of the energy assessment report.",
      "examples": [
        "Energy yield assessment of the Barefoot Wind Farm"
      ],
      "type": "string"
    },
    "description": {
      "title": "Description",
      "description": "Description of the energy assessment report.",
      "examples": [
        "Wind resource and energy yield assessment of the Barefoot Wind Farm based on one on-site meteorological mast and considering two different turbine scenarios."
      ],
      "type": "string"
    },
    "comments": {
      "title": "Comments",
      "description": "Comments on the energy assessment report.",
      "examples": [
        "Update to consider further on-site measurement data."
      ],
      "type": "string"
    },
    "project_name": {
      "title": "Project Name",
      "description": "Name of the project under assessment.",
      "examples": [
        "Barefoot Wind Farm"
      ],
      "type": "string"
    },
    "document_id": {
      "title": "Document ID",
      "description": "The ID of the report document; when including a document_version, do not duplicate the version here",
      "examples": [
        "C385945/A/UK/R/002",
        "0345.923454.0001"
      ],
      "type": "string"
    },
    "document_version": {
      "title": "Document Version",
      "description": "Version of the report document.",
      "examples": [
        "1.2.3",
        "A",
        "Rev. A"
      ],
      "type": "string"
    },
    "issue_date": {
      "title": "Issue Date",
      "description": "Report issue date (format YYYY-MM-DD).",
      "examples": [
        "2022-10-05"
      ],
      "type": "string",
      "format": "date"
    },
    "issuing_organisation_name": {
      "title": "Issuing Organisation Name",
      "description": "Entity name of the organisation issuing the report.",
      "examples": [
        "The Torre Egger Consultants Limited"
      ],
      "type": "string"
    },
    "issuing_organisation_abbreviation": {
      "title": "Issuing Organisation Abbreviation",
      "description": "Abbreviated name of issuing organisation.",
      "examples": [
        "Torre Egger"
      ],
      "type": "string"
    },
    "issuing_organisation_address": {
      "title": "Issuing Organisation Address",
      "description": "Address of organisation issuing the report.",
      "examples": [
        "5 Munro Road, Summit Centre, Sgurrsville, G12 0YE, UK"
      ],
      "type": "string"
    },
    "contributors": {
      "title": "Contributors",
      "description": "List of report contributors (e.g. author and verifier)",
      "type": "array",
      "items": {
        "$ref": "#/definitions/ReportContributor"
      }
    },
    "receiving_organisation_name": {
      "title": "Receiving Organisation Name",
      "description": "Entity name of the organisation receiving the report.",
      "examples": [
        "Miranda Investments Limited"
      ],
      "type": "string"
    },
    "receiving_organisation_abbreviation": {
      "title": "Receiving Organisation Abbreviation",
      "description": "Abbreviated name of receiving organisation.",
      "examples": [
        "Miranda"
      ],
      "type": "string"
    },
    "receiving_organisation_address": {
      "title": "Receiving Organisation Address",
      "description": "Address of organisation receiving the report.",
      "type": "string"
    },
    "receiving_organisation_contact_name": {
      "title": "Receiving Organisation Contact Name",
      "description": "Name(s) of contact person(s) in receiving organisation.",
      "examples": [
        "Luis Bunuel",
        "Miles Davis, John Coltrane"
      ],
      "type": "string"
    },
    "confidentiality_classification": {
      "title": "Confidentiality Classification",
      "description": "Confidentiality classification of the report.",
      "examples": [
        "Confidential",
        "Commercial in confidence"
      ],
      "type": "string"
    },
    "coordinate_reference_system": {
      "title": "Coordinate Reference System",
      "description": "Coordinate reference system used for all location data.",
      "$ref": "#/definitions/CoordinateReferenceSystem"
    },
    "wind_measurement_campaigns": {
      "title": "Wind Measurement Campaigns",
      "description": "List of wind measurement campaign details.",
      "default": [],
      "type": "array",
      "items": {
        "$ref": "#/definitions/WindMeasurementCampaign"
      }
    },
    "measurement_wind_resource_assessments": {
      "title": "Measurement Wind Resource Assessments",
      "description": "List of measurement location wind resource assessment details.",
      "default": [],
      "type": "array",
      "items": {
        "$ref": "#/definitions/MeasurementWindResourceAssessment"
      }
    },
    "reference_turbine_assessments": {
      "title": "Reference Turbine Assessments",
      "description": "List of reference operational turbine assessment details.",
      "default": [],
      "type": "array",
      "items": {
        "$ref": "#/definitions/ReferenceTurbineAssessment"
      }
    },
    "scenarios": {
      "title": "Scenarios",
      "description": "List of scenarios included in the report",
      "default": [],
      "type": "array",
      "items": {
        "$ref": "#/definitions/Scenario"
      }
    }
  },
  "required": [
    "title",
    "project_name",
    "issue_date",
    "issuing_organisation_name",
    "contributors",
    "coordinate_reference_system"
  ],
  "definitions": {
    "ReportContributor": {
      "title": "ReportContributor",
      "description": "Contributor to a report .",
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "description": "Name of the contributor.",
          "examples": [
            "Joan Miro",
            "Andrei Tarkovsky"
          ],
          "type": "string"
        },
        "email_address": {
          "title": "Email Address",
          "description": "Email address of the contributor.",
          "examples": [
            "j.miro@art.cat",
            "andrei.tarkovsky@cinema.com"
          ],
          "type": "string",
          "format": "email"
        },
        "contributor_type": {
          "title": "Contributor Type",
          "description": "Type of contributor.",
          "enum": [
            "author",
            "verifier",
            "approver",
            "other"
          ],
          "type": "string"
        },
        "contribution_notes": {
          "title": "Contribution Notes",
          "description": "Notes to clarify contribution.",
          "examples": [
            "Second author"
          ],
          "type": "string"
        },
        "completion_date": {
          "title": "Completion Date",
          "description": "Contribution completion date (format YYYY-MM-DD).",
          "examples": [
            "2022-10-04"
          ],
          "type": "string",
          "format": "date"
        }
      },
      "required": [
        "name",
        "contributor_type"
      ]
    },
    "CoordinateReferenceSystem": {
      "title": "CoordinateReferenceSystem",
      "description": "Specification of a coordinate reference system for GIS data.",
      "type": "object",
      "properties": {
        "system_label": {
          "title": "System Label",
          "description": "Label of the coordinate system.",
          "examples": [
            "OSGB36 / British National Grid",
            "SWEREF99 TM"
          ],
          "type": "string"
        },
        "epsg_srid": {
          "title": "Epsg Srid",
          "description": "EPSG Spatial Reference System Identifier (SRID).",
          "examples": [
            27700,
            3006
          ],
          "type": "integer"
        },
        "wkt": {
          "title": "Wkt",
          "description": "Well-known text (WKT) string definition of the coordinate system.",
          "type": "string"
        }
      },
      "required": [
        "system_label"
      ]
    },
    "Location": {
      "title": "Location",
      "description": "Specification of a horizontal location in space.",
      "type": "object",
      "properties": {
        "location_id": {
          "title": "Location Id",
          "description": "Unique identifier of the location.",
          "examples": [
            "ee15ff84-6733-4858-9656-ba995d9b1022",
            "WTG02-loc1"
          ],
          "type": "string"
        },
        "label": {
          "title": "Label",
          "description": "Label of the location.",
          "examples": [
            "T1",
            "WTG02-loc1",
            "WEA_003/R2"
          ],
          "type": "string"
        },
        "description": {
          "title": "Description",
          "description": "Description of the location.",
          "examples": [
            "Preliminary location of T1"
          ],
          "type": "string"
        },
        "comments": {
          "title": "Comments",
          "description": "Comments regarding the location.",
          "examples": [
            "Pending ground investigations"
          ],
          "type": "string"
        },
        "x": {
          "title": "X",
          "description": "Location x-coordinate (typically easing).",
          "examples": [
            419665.0
          ],
          "type": "number"
        },
        "y": {
          "title": "Y",
          "description": "Location y-coordinate (typically northing).",
          "examples": [
            6195240.0
          ],
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ]
    },
    "WindMeasurementCampaign": {
      "title": "WindMeasurementCampaign",
      "description": "Details of a wind measurement campaign.",
      "type": "object",
      "properties": {
        "measurement_id": {
          "title": "Measurement Id",
          "description": "Measurement unique ID.",
          "examples": [
            "BF_M1_1.0.0"
          ],
          "type": "string"
        },
        "name": {
          "title": "Name",
          "description": "Measurement name for use as label; when including a 'metadata_ref', it is recommended this value matches the 'name' field of the 'measurement_location'.",
          "examples": [
            "Mast M1"
          ],
          "type": "string"
        },
        "label": {
          "title": "Label",
          "description": "Measurement label (if not provided name is used).",
          "examples": [
            "M1"
          ],
          "type": "string"
        },
        "description": {
          "title": "Description",
          "description": "Measurement description.",
          "examples": [
            "Barefoot Wind Farm on-site meteorological mast"
          ],
          "type": "string"
        },
        "comments": {
          "title": "Comments",
          "description": "Measurement comments.",
          "examples": [
            "Measurements were still ongoing at time of assessment"
          ],
          "type": "string"
        },
        "location": {
          "title": "Location",
          "description": "Horizontal location of the measurement equipment.",
          "$ref": "#/definitions/Location"
        },
        "metadata_ref": {
          "$ref": "https://raw.githubusercontent.com/IEA-Task-43/digital_wra_data_standard/master/schema/iea43_wra_data_model.schema.json",
          "title": "Metadata Reference (IEA Task 43 WRA Data Model)",
          "description": "Reference to a json document with measurement metadata according to the IEA Task 43 WRA data model.",
          "examples": [
            "https://foo.com/bar/example_iea43.json"
          ]
        }
      },
      "required": [
        "measurement_id",
        "name",
        "location"
      ]
    },
    "ResultsComponent": {
      "title": "ResultsComponent",
      "description": "Component of a set of results.",
      "type": "object",
      "properties": {
        "component_type": {
          "title": "Component Type",
          "description": "Type of results component.",
          "examples": [
            "mean",
            "median",
            "std",
            "P90"
          ],
          "type": "string"
        },
        "description": {
          "title": "Description",
          "description": "Description of the results component.",
          "type": "string"
        },
        "comments": {
          "title": "Comments",
          "description": "Comments on the results component.",
          "type": "string"
        },
        "values": {
          "title": "Values",
          "description": "Result value(s) as simple float or labeled map.",
          "examples": [
            123.4,
            {
              "WTG01": 123.4,
              "WTG02": 143.2
            }
          ],
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "object",
              "additionalProperties": {
                "type": "number"
              }
            },
            {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "additionalProperties": {
                  "type": "number"
                }
              }
            },
            {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "number"
                  }
                }
              }
            },
            {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "number"
                    }
                  }
                }
              }
            },
            {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "number"
                      }
                    }
                  }
                }
              }
            }
          ]
        }
      },
      "required": [
        "component_type",
        "values"
      ]
    },
    "Results": {
      "title": "Results",
      "description": "Single set of results for an element of an energy assessment.",
      "type": "object",
      "properties": {
        "label": {
          "title": "Label",
          "description": "Label of the results.",
          "examples": [
            "10-year P50"
          ],
          "type": "string"
        },
        "description": {
          "title": "Description",
          "description": "Description of the results.",
          "examples": [
            "10-year wind farm net P50 energy yield."
          ],
          "type": "string"
        },
        "comments": {
          "title": "Comments",
          "description": "Comments on the results.",
          "examples": [
            "Corresponds to first 10 years of operation."
          ],
          "type": "string"
        },
        "unit": {
          "title": "Unit",
          "description": "Unit of result values (TO REPLACE BY LITERAL).",
          "type": "string"
        },
        "applicability_type": {
          "title": "Applicability Type",
          "description": "Applicability type of energy assessment results.",
          "enum": [
            "lifetime",
            "any_one_year",
            "one_operational_year",
            "other"
          ],
          "type": "string"
        },
        "results_dimensions": {
          "title": "Results Dimensions",
          "description": "Type of energy assessment results.",
          "type": "array",
          "items": {
            "enum": [
              "none",
              "location",
              "hub_height",
              "year",
              "month",
              "month_of_year"
            ],
            "type": "string"
          }
        },
        "result_components": {
          "title": "Result Components",
          "description": "List of result components.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/ResultsComponent"
          }
        }
      },
      "required": [
        "label",
        "unit",
        "applicability_type",
        "results_dimensions",
        "result_components"
      ]
    },
    "UncertaintyComponent": {
      "title": "UncertaintyComponent",
      "description": "Wind resource uncertainty assessment component.",
      "type": "object",
      "properties": {
        "label": {
          "title": "Label",
          "description": "Label of the wind uncertainty component.",
          "examples": [
            "Long-term consistency"
          ],
          "type": "string"
        },
        "description": {
          "title": "Description",
          "description": "Description of the wind uncertainty component.",
          "examples": [
            "Uncertainty associated with the consistency of the long-term reference data"
          ],
          "type": "string"
        },
        "comments": {
          "title": "Comments",
          "description": "Comments on the wind uncertainty component.",
          "type": "string"
        },
        "results": {
          "title": "Results",
          "description": "Wind resource uncertainty assessment component results.",
          "$ref": "#/definitions/Results"
        }
      },
      "required": [
        "label",
        "results"
      ]
    },
    "UncertaintyCategory": {
      "title": "UncertaintyCategory",
      "description": "Wind resource uncertainty assessment category.",
      "type": "object",
      "properties": {
        "components": {
          "title": "Components",
          "description": "Wind resource uncertainty assessment components.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/UncertaintyComponent"
          }
        },
        "category_results": {
          "title": "Category Results",
          "description": "Category level assessment results.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Results"
          }
        }
      },
      "required": [
        "components",
        "category_results"
      ]
    },
    "UncertaintyAssessment": {
      "title": "UncertaintyAssessment",
      "description": "Wind resource uncertainty assessment including all components.",
      "type": "object",
      "properties": {
        "categories": {
          "title": "Categories",
          "description": "Wind resource uncertainty assessment categories.",
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/UncertaintyCategory"
          }
        }
      },
      "required": [
        "categories"
      ]
    },
    "MeasurementWindResourceAssessment": {
      "title": "MeasurementWindResourceAssessment",
      "description": "Wind resource assessment at the measurement locations.",
      "type": "object",
      "properties": {
        "results": {
          "title": "Results",
          "description": "Assessment results at the measurement location(s).",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Results"
          }
        },
        "uncertainty_assessment": {
          "title": "Uncertainty Assessment",
          "description": "Measurement wind resource uncertainty assessment.",
          "$ref": "#/definitions/UncertaintyAssessment"
        }
      },
      "required": [
        "results",
        "uncertainty_assessment"
      ]
    },
    "ReferenceTurbineAssessment": {
      "title": "ReferenceTurbineAssessment",
      "description": "Reference operational turbine assessment.",
      "type": "object",
      "properties": {}
    },
    "TurbineModel": {
      "title": "TurbineModel",
      "description": "Specification of a wind turbine model.",
      "type": "object",
      "properties": {
        "label": {
          "title": "Label",
          "description": "Label of the turbine model.",
          "examples": [
            "V172-7.2 MW",
            "N175/6.X",
            "SG 6.6-170",
            "E-175 EP5"
          ],
          "type": "string"
        },
        "perf_spec_ref": {
          "type": "string",
          "$ref": "https://foo.bar.com/baz/wtg_model.schema.json",
          "title": "Turbine Model Performance Specification Reference",
          "description": "Reference to a json document with turbine model performance specification (PLACEHOLDER).",
          "examples": [
            "https://foo.com/bar/example_wtg_model.json"
          ]
        }
      },
      "required": [
        "label"
      ]
    },
    "OperationalRestriction": {
      "title": "OperationalRestriction",
      "description": "Specifications of an operational restriction.",
      "type": "object",
      "properties": {
        "label": {
          "title": "Label",
          "description": "Label of the operational restriction.",
          "examples": [
            "WSM curtailment",
            "MEC curtailment"
          ],
          "type": "string"
        },
        "description": {
          "title": "Description",
          "description": "Description of the operational restriction.",
          "examples": [
            "Wind sector management (WSM) curtailment as specified by the turbine manufacturer"
          ],
          "type": "string"
        },
        "comments": {
          "title": "Comments",
          "description": "Comments regarding the operational restriction.",
          "type": "string"
        }
      },
      "required": [
        "label",
        "description"
      ]
    },
    "TurbineSpecification": {
      "title": "TurbineSpecification",
      "description": "Specification of all details for a turbine configuration.",
      "type": "object",
      "properties": {
        "turbine_id": {
          "title": "Turbine Id",
          "description": "Unique identifier of the turbine specification.",
          "examples": [
            "b55caeac-f152-4b13-8217-3fddeab792cf",
            "T1-scen1"
          ],
          "type": "string"
        },
        "label": {
          "title": "Label",
          "description": "Label of the turbine.",
          "examples": [
            "T1",
            "WTG02",
            "WEA_003"
          ],
          "type": "string"
        },
        "description": {
          "title": "Description",
          "description": "Description of the turbine configuration.",
          "examples": [
            "Turbine specification for T1 in Scenario B"
          ],
          "type": "string"
        },
        "comments": {
          "title": "Comments",
          "description": "Comments regarding the turbine configuration.",
          "examples": [
            "Preliminary alternative configuration with Unconfirmed turbine suitability"
          ],
          "type": "string"
        },
        "location": {
          "title": "Location",
          "description": "Horizontal location of the turbine.",
          "$ref": "#/definitions/Location"
        },
        "hub_height": {
          "title": "Hub Height",
          "description": "Turbine hub height.",
          "type": "number"
        },
        "model": {
          "title": "Model",
          "description": "Turbine model.",
          "$ref": "#/definitions/TurbineModel"
        },
        "restrictions": {
          "title": "Restrictions",
          "description": "List of operational restrictions at the turbine level.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/OperationalRestriction"
          }
        }
      },
      "required": [
        "label",
        "location",
        "hub_height",
        "model"
      ]
    },
    "WindFarm": {
      "title": "WindFarm",
      "description": "A collection of wind turbines considered as one unit (plant).",
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "description": "Name of the wind farm.",
          "examples": [
            "Barefoot Wind Farm",
            "Project Summit Phase III"
          ],
          "type": "string"
        },
        "label": {
          "title": "Label",
          "description": "Abbreviated label of the wind farm.",
          "examples": [
            "BWF",
            "Summit PhIII"
          ],
          "type": "string"
        },
        "description": {
          "title": "Description",
          "description": "Description of the wind farm.",
          "examples": [
            "The third phase of the Summit project"
          ],
          "type": "string"
        },
        "comments": {
          "title": "Comments",
          "description": "Comments regarding the wind farm.",
          "type": "string"
        },
        "turbines": {
          "title": "Turbines",
          "description": "List of specifications for constituent turbines.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/TurbineSpecification"
          }
        },
        "relevance": {
          "title": "Relevance",
          "description": "The relevance of the wind farm for the assessment.",
          "enum": [
            "internal",
            "external",
            "future"
          ],
          "type": "string"
        },
        "operational_lifetime_start_date": {
          "title": "Operational Lifetime Start Date",
          "description": "Operational lifetime start date (format YYYY-MM-DD).",
          "examples": [
            "2026-01-01",
            "2017-04-01"
          ],
          "type": "string",
          "format": "date"
        },
        "operational_lifetime_end_date": {
          "title": "Operational Lifetime End Date",
          "description": "Operational lifetime end date (format YYYY-MM-DD).",
          "examples": [
            "2051-03-31",
            "2025-12-31"
          ],
          "type": "string",
          "format": "date"
        },
        "wind_farm_restrictions": {
          "title": "Wind Farm Restrictions",
          "description": "List of operational restrictions at the wind farm level.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/OperationalRestriction"
          }
        }
      },
      "required": [
        "name",
        "turbines",
